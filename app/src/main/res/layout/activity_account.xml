<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

    <ImageView
        android:id="@+id/backArw"
        android:background="?selectableItemBackground"
        android:layout_width="31dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow"
        app:tint="@color/arrow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backArw">

        <TextView
            android:id="@+id/privacy"
            android:background="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="40dp"
            android:padding="20dp"
            android:text="Privacy"
            android:textSize="18sp"
            android:textStyle="bold"
            app:drawableTint="@color/arrow" />

        <TextView
            android:id="@+id/twoStep"
            android:background="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/twostep"
            android:drawablePadding="40dp"
            android:padding="20dp"
            android:text="Two-step verification"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/change"
            android:background="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/change"
            android:drawablePadding="40dp"
            android:padding="20dp"
            android:text="Change e-mail"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/delete"
            android:background="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/delete"
            android:drawablePadding="40dp"
            android:padding="20dp"
            android:text="Delete my account"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Account"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backArw"
        app:layout_constraintStart_toEndOf="@+id/backArw"
        app:layout_constraintTop_toTopOf="@+id/backArw" />
</androidx.constraintlayout.widget.ConstraintLayout>